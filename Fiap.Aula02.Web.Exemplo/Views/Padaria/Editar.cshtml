@model Padaria

@{
    ViewData["Title"] = "Editar Padaria";
}

<h1>Editar</h1>


<form asp-action="editar">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>

    <div class="form-group">
        <input asp-for="Codigo" class="form-control" />
    </div>

    <div class="form-group">
        <input asp-for="Disponivel" />
        <label asp-for="Disponivel"></label>
    </div>

    <div class="form-group">
        <label asp-for="Faturamento"></label>
        <input asp-for="Faturamento" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DtAbertura"></label>
        <input asp-for="DtAbertura" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Cidade"></label>
        <select asp-for="Cidade" class="form-control" asp-items="@ViewBag.cidades">
            <option>Selecione</option>
        </select>
    </div>

    <div>

        <input type="submit" class="btn btn-outline-success" value="Editar" />
        <a asp-action="index" class="btn btn-danger" >Cancelar</a>
    </div>


</form>