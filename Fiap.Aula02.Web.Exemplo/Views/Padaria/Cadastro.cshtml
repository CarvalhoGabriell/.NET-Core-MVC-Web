@model Padaria
@{ 
    ViewData["title"] = "Cadastrar";
}

<h1>Cadastro</h1>

@if(@TempData["msg"] != null) 
 {
    <div class="alert alert-success">
        @TempData["msg"]
        <ul>
            <li></li>
        </ul>
    </div>
 }

<form asp-action="cadastro">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Codigo"></label>
        <input asp-for="Codigo" class="form-control" />
    </div>

    <div class="form-group">
        <input asp-for="Disponivel" />
        <label asp-for="Disponivel"></label>
    </div>

    <div class="form-group">
        <label asp-for="Faturamento"></label>
        <input asp-for="Faturamento" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DtAbertura"></label>
        <input asp-for="DtAbertura" class="form-control" />
    </div>

    <div>

        <input type="submit" class="btn btn-outline-success" value="Cadastrar"/>
    </div>
</form>