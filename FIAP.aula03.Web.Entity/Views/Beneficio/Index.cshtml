@model Beneficio


@{
    ViewData["title"] = "Beneficios";
}

<h1 class="badge badge-primary"> Benefícios do Funcionario</h1>

<h />
<mensagem texto="@TempData["msg"]"></mensagem>

<div class="row">
    <div class="col">
        <h2>Cadastro</h2>

        <form asp-action="cadastrar">
            <div class="form-group">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" class="form-control"/>
            </div>

            <div class="form-group">
                <input asp-for="Disponivel"/>
                <label asp-for="Disponivel">Disponivel</label>
            </div>
            <input type="submit" class="btn btn-primary" value="Cadastrar" />
        </form>
    </div>
    
    <div class="col">
        <h2>Listagem</h2>
        <table class="table table-success">
            <tr>
                <th>Nome</th>
                <th>Disponível</th>

            </tr>

            @foreach(var itens in ViewBag.beneficios)
            {
                <tr>
                    <td>@itens.Nome</td>
                    <td>@(itens.Disponivel?"Sim":"Não")</td>
                </tr>
            }
        </table>
    </div>
</div>