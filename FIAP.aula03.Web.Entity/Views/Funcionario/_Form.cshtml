@model Funcionario


    <div class="form-group">
        <label asp-for="Nome" class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="DataContratacao" class="form-label">Data Contratação</label>
        <input asp-for="DataContratacao" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Salario" class="form-label">Salario</label>
        <input asp-for="Salario" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Genero" class="form-label">Gênero</label>
        <select class="form-control" asp-for="Genero" asp-items="@Html.GetEnumSelectList<Genero>()">
            <option>Selecione seu Gênero</option>
        </select>
    </div>
    <div class="form-group">
        

        <label for="verdadeiro">Ativo</label>
        <input asp-for="Ativo" type="radio" id="verdadeiro" value="true">

        <label for="falso">Inativo</label>
        <input asp-for="Ativo" type="radio" id="falso" value="false">

    </div>
